{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "incremental": true,
    "allowJs": true,
    "lib": ["ES2016", "ES2017", "ES2018", "ES2019", "ESNext", "ESNext.AsyncIterable"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
